<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="https://openbox.org/3.4/menu">

<menu id="root-menu" label="Openbox">
  <separator label="Openbox 3"/>
  <menu id="accessory-menu" label="Accessories">
    <item label="Font-Manager">
      <action name="Execute">
        <command>font-manager</command>
      </action>
    </item>
    <item label="Galculator">
      <action name="Execute">
        <command>galculator</command>
      </action>
    </item>
    <item label="Pavucontrol">
      <action name="Execute">
        <command>pavucontrol</command>
      </action>
    </item>
  </menu>

  <menu id="editors-menu" label="Editors">
    <item label="Neovide">
      <action name="Execute">
        <command>neovide</command>
      </action>
    </item>
    <item label="Nvim">
      <action name="Execute">
        <command>alacritty -e nvim</command>
      </action>
    </item>
    <item label="Sublime Text">
      <action name="Execute">
        <command>subl</command>
      </action>
    </item>
    <item label="Visual Code">
      <action name="Execute">
        <command>code</command>
      </action>
    </item>
  </menu>

  <menu id="term-menu" label="Terminals">
    <item label="Alacritty">
      <action name="Execute">
        <command>alacritty</command>
      </action>
    </item>
    <item label="St">
      <action name="Execute">
        <command>st</command>
      </action>
    </item>
  </menu>

  <item label="Reconfigure Openbox">
    <action name="Reconfigure"/>
  </item>

  <menu id="power-menu" label="Power">
    <item label="Log Out">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </item>
    <item label="Sleep">
      <action name="Execute">
        <command>systemctl suspend</command>
      </action>
    </item>
    <item label="Shutdown">
      <action name="Execute">
        <command>systemctl poweroff</command>
      </action>
    </item>
</menu>

</openbox_menu>
